@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container center-div">
    <p></p>
    <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-10">
            <div>
                <h4>
                    <span class="fa fa-users fa-2x"></span> ALMAN password assistance

                </h4>
            </div>
            <div>
                <p>
                    Enter the e-mail address associated with your ALMAN account, then click
                    continue.  We wil email you the link to a page where you can easily create a
                    new password.
                </p>
            </div>
        </div>        
    </div>
    <div class="row">
        <div class="col-sm-10 col-md-8 col-lg-8">
            <form action="@Url.Action("Login","Account") id="recover-form" method="post" role="form">
                <div class="form-group">
                    <label for="login-name">Email address</label>
                    <input id="login-name"
                           class="form-control"
                           type="email"
                           data-bind="value: Username"
                           required
                           placeholder="myaddress@gmail.com"
                           data-error="The email address you entered is invalid." />
                </div>
                <button type="submit" class="btn btn-primary">
                    Continue <span class="fa fa-arrow-right"></span>
                </button>
            </form>
        </div>
    </div>
</div>

